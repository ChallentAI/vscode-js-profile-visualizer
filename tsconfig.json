{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6",
			"dom"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
    "jsx": "react",
		"jsxFactory": "h",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
