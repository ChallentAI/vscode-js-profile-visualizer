{
  "private": true,
  "scripts": {
    "compile": "concurrently \"npm:compile:core:*\" \"npm:compile:table:*\" \"npm:compile:flame:*\"",
    "compile:core": "concurrently \"npm:compile:core:*\"",
    "compile:core:tsc": "cd packages/vscode-js-profile-core && tsc -p tsconfig.json",
    "compile:core:esm": "cd packages/vscode-js-profile-core && tsc -p tsconfig.browser.json",
    "compile:core:css": "cd packages/vscode-js-profile-core && cpy --parents --cwd=src \"**/*.css\" ../out/esm",
    "compile:table": "concurrently \"npm:compile:table:*\"",
    "compile:table:tsc": "cd packages/vscode-js-profile-table && tsc",
    "compile:table:webpack": "cd packages/vscode-js-profile-table && cross-env MODE=production webpack",
    "compile:flame": "concurrently \"npm:compile:flame:*\"",
    "compile:flame:tsc": "cd packages/vscode-js-profile-flame && tsc",
    "compile:flame:webpack": "cd packages/vscode-js-profile-flame && cross-env MODE=production webpack",
    "watch": "concurrently \"npm:watch:core:*\" \"npm:watch:flame:*\" \"npm:watch:table:*\"",
    "watch:core:tsc": "cd packages/vscode-js-profile-core && tsc --watch",
    "watch:core:esm": "cd packages/vscode-js-profile-core && tsc --watch -p tsconfig.browser.json",
    "watch:core:css": "npm run compile:core:css && cd packages/vscode-js-profile-core && chokidar \"src/**/*.css\" -c \"cpy --parents --cwd=src '**/*.css' ../out/esm\"",
    "watch:table": "concurrently \"npm:watch:table:*\"",
    "watch:table:tsc": "cd packages/vscode-js-profile-table && tsc --watch",
    "watch:table:webpack": "cd packages/vscode-js-profile-table && webpack --watch",
    "watch:flame": "concurrently \"npm:watch:flame:*\"",
    "watch:flame:tsc": "cd packages/vscode-js-profile-flame && tsc --watch",
    "watch:flame:webpack": "cd packages/vscode-js-profile-flame && webpack --watch",
    "fmt": "prettier --write \"packages/**/*.{ts,tsx,css}\" \"!**/out/**\" && npm run test:lint -- --fix",
    "test": "concurrently \"npm:test:*\"",
    "test:lint": "eslint  \"packages/**/*.{ts,tsx}\"",
    "test:fmt": "prettier --list-different \"packages/**/*.{ts,tsx,css}\" \"!**/out/**\"",
    "vscode:prepublish": "npm run compile"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "autoprefixer": "^9.7.4",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.1.0",
    "cpy-cli": "^3.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.4.2",
    "devtools-protocol": "0.0.748504",
    "eslint": "^6.8.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-react": "^7.19.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^4.0.0",
    "lerna": "^3.20.2",
    "mocha": "^7.0.1",
    "postcss-loader": "^3.0.0",
    "preact": "^10.3.4",
    "prettier": "^1.19.1",
    "style-loader": "^1.1.3",
    "svg-inline-loader": "^0.8.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "vscode-debugprotocol": "^1.39.0",
    "vscode-test": "^1.3.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "preact-virtual-list": "^0.3.1"
  }
}
